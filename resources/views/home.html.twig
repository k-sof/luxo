                        </ul>
                    </div>
                </div>
            </div>
            <article class="d-flex flex-column text-center">
                <h3 class="p-2">{{ announcement_achat.title }}</h3>
                <h4 class="p-2">{{ announcement_achat.price|number_format(0, '', ' ') }} €</h4>
