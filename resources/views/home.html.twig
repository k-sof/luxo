{% extends session ? "layouts/userdefault.html.twig" : "layouts/default.html.twig" %}
{% block main %}
    <section class="presentation padding">
        <article class="text-center text-justify">
            <h1>Luxo Have New Offers For You</h1>

            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ab culpa deserunt dignissimos eaque excepturi
                explicabo, illum incidunt ipsum minus nobis pariatur placeat possimus qui recusandae sapiente voluptate
                voluptatum! Aut, molestiae?</p>
        </article>
    </section>
    <section class="location d-flex flex-wrap">
        {% for announcement_location in announcements.location %}
            <article class="col-md-3">
            <div class="slider">
                <div class="glide">
                    <div data-glide-el="track" class="glide__track">
                        <ul class="glide__slides">
                            <li class="glide__slide"><img src="{{ asset('assets/images/studio/1.jpg') }}" alt="La forêt de peupliers" class="rounded"></li>
