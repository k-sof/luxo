                        </ul>
                    </div>
                </div>
            </div>
            <article class="d-flex flex-column text-center">
                <h3 class="p-2">{{ announcement_location.title }}</h3>
                <h4 class="p-2">{{ announcement_location.price|number_format(0, '', ' ') }} €</h4>
                <a class="p-2 btn btn-outline-info" href="{{ path('luxo_announcement_show', {id:announcement_location.id}) }}">en savoir plus</a>
            </article>
        </article>
        {% endfor %}

    </section>
    <section class="video padding">
        <h2>New <span>Life</span>,New <span>Beginning</span></h2>
    </section>
